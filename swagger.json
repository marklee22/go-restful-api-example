        "produces": [
          "application/json"
        ],
        "tags": [
          "companies"
        ],
        "summary": "Creates a company.",
        "operationId": "createCompany",
        "parameters": [
          {
            "type": "string",
            "description": "Name of the company",
            "name": "name",
            "in": "formData",
            "required": true
          },
          {
            "type": "string",
            "description": "Telephone of the company",
            "name": "tel",
            "in": "formData",
            "required": true
          },
          {
            "type": "string",
            "description": "Email of the company",
            "name": "email",
            "in": "formData",
            "required": true
          }
        ],
        "responses": {
          "201": {
            "description": "Company created"
          }
        }
      }
    },
    "/companies/{name}": {
      "get": {
        "produces": [
          "application/json"
        ],
        "tags": [
          "companies"
        ],
        "summary": "Get a company by name.",
        "operationId": "getCompany",
        "parameters": [
          {
            "type": "string",
            "name": "name",
            "in": "path",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "A Company",
            "schema": {
              "$ref": "#/definitions/Company"
            }
          }
        }
      },
      "put": {
        "consumes": [
          "application/x-www-form-urlencoded"
        ],
        "produces": [
          "application/json"
        ],
        "tags": [
          "companies"
        ],
        "summary": "Updates a company.",
        "operationId": "updateCompany",
        "parameters": [
          {
            "type": "string",
            "description": "Name of the company",
            "name": "name",
            "in": "path",
            "required": true
          },
          {
            "type": "string",
            "description": "Telephone of the company",
            "name": "tel",
            "in": "formData"
          },
          {
            "type": "string",
            "description": "Email of the company",
            "name": "email",
            "in": "formData"
          }
        ],
        "responses": {
          "200": {
            "description": "Company updated"
          }
        }
      },
      "delete": {
        "produces": [
          "application/json"
        ],
        "tags": [
          "companies"
        ],
        "summary": "Deletes a company.",
        "operationId": "deleteCompany",
        "parameters": [
          {
            "type": "string",
            "description": "Name of the company",
            "name": "name",
            "in": "path",
            "required": true
          }
        ],
        "responses": {
          "202": {
            "description": "Company deleted"
          }
        }
      }
